{% extends 'base.html.twig' %}

{% block body %}

    <div id="connection-form" class="flexbox-col-10">
        {{ form_start(form, {'attr': {'class': 'form_login'}}) }}
        {{ form_errors(form) }}


        <div class="form-group">
            {{ form_row(form.email.first, {
                'label' : false,
                'attr': {'placeholder': 'Email'}
            }) }}
            {{ form_row(form.email.first) }}
        </div>

        <div class="form-group">
            {{ form_row(form.email.second, {
                'label' : false,
                'attr': {'placeholder': 'répétez le mail'}

            }) }}
            {{ form_row(form.email.second) }}
        </div>

        <div class="form-group">
            {{ form_row(form.plainPassword.first, {
                'label' : false,
                'attr': {'placeholder': 'Mot de passe'}
            }) }}
            {{ form_row(form.plainPassword.first) }}
        </div>

        <div class="form-group">
            {{ form_row(form.plainPassword.second, {
                'label' : false,
                'attr': {'placeholder': 'répétez le mot de passe'}

            }) }}
            {{ form_row(form.plainPassword.second) }}
        </div>

        <div class="button-bg">
            <button type="submit" formnovalidate>
                S'inscrire !
            </button>
        </div>
        {{ form_end(form) }}

    </div>
{% endblock %}